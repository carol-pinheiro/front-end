    <script>
        var num1 = parseFloat(prompt("Digite o primeiro número: "));
        var num2 = parseFloat(prompt("Digite o segundo número: "));
        var soma = num1 + num2;

        if (soma > 10) {
            alert("a soma deles é mais que o numero 10, resultado: " + soma);
        } else {
            alert("A soma dos números é menor que 10");
        }
    </script>
